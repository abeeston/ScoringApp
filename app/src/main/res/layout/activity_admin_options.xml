<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.amy.scoringapp.AdminOptions">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select An Option:"
        android:id="@+id/textView10"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create New Tournament"
        android:id="@+id/AdminGoToCreate"
        android:layout_marginTop="73dp"
        android:layout_below="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:onClick="onClickAdminOptions" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit or Delete Tournament"
        android:id="@+id/button5"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/AdminGoToCreate"
        android:layout_alignLeft="@+id/AdminGoToCreate"
        android:layout_alignStart="@+id/AdminGoToCreate"
        android:nestedScrollingEnabled="true"
        android:onClick="onClickAddOrDelete" />
</RelativeLayout>
