<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.amy.scoringapp.AdminOptions">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Create New Tournament  "
        android:id="@+id/AdminGoToCreate"
        android:onClick="onClickTournCreate"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/AdminAddEditDeleteAdmin"
        android:layout_alignLeft="@+id/SpinnerEdit"
        android:layout_alignStart="@+id/SpinnerEdit"
        android:background="#ff60b5ad"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Selected Tournament"
        android:id="@+id/EditTournament"
        android:nestedScrollingEnabled="true"
        android:onClick="onClickEdit"
        android:layout_below="@+id/SpinnerEdit"
        android:layout_alignLeft="@+id/DeleteSelectedTournament"
        android:layout_alignStart="@+id/DeleteSelectedTournament"
        android:layout_alignRight="@+id/DeleteSelectedTournament"
        android:layout_alignEnd="@+id/DeleteSelectedTournament"
        android:background="#ff0eb37c"
        android:textColor="#ffffffff" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SpinnerEdit"
        android:spinnerMode="dropdown"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/AdminGoToCreate"
        android:layout_alignLeft="@+id/EditTournament"
        android:layout_alignStart="@+id/EditTournament"
        android:layout_alignRight="@+id/EditTournament"
        android:layout_alignEnd="@+id/EditTournament" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Delete Selected Tournament  "
        android:id="@+id/DeleteSelectedTournament"
        android:onClick="onClickTournDelete"
        android:background="#ff0eb37c"
        android:layout_below="@+id/EditTournament"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Admin Settings  "
        android:id="@+id/AdminAddEditDeleteAdmin"
        android:onClick="onClickAdminSettings"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="#ff00004e"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Select a Tournament"
        android:id="@+id/textView10"
        android:textColor="#ff0eb37c"
        android:layout_below="@+id/AdminGoToCreate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="27dp" />
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
