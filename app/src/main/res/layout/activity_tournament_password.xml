<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.amy.scoringapp.TournamentPassword">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EnterPassword"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/PleaseEnterPWText"
        android:layout_alignStart="@+id/PleaseEnterPWText"
        android:layout_alignRight="@+id/PleaseEnterPWText"
        android:layout_alignEnd="@+id/PleaseEnterPWText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Please enter the event password"
        android:id="@+id/PleaseEnterPWText"
        android:layout_above="@+id/EnterPassword"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/SubmitPassword"
        android:onClick="onClickSubmitTournamentPassword"
        android:layout_below="@+id/EnterPassword"
        android:layout_centerHorizontal="true"
        android:background="#ff00004e"
        android:textColor="#ffffffff" />

</RelativeLayout>
